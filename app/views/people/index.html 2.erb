<h1> Listing the people </h1>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
 
  <% @people.each do |people| %>
    <tr>
      <td><%= people.Name %></td>
      <td><%= people.Role %></td>
      <td><%= link_to 'Show', people_path(people) %></td>
    </tr>
  <% end %>
</table>